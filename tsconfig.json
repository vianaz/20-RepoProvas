{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "target": "ES2016",
    "paths": {
      "@schemas/*": ["./src/schemas/*"],
      "@db/*": ["./src/db/*"],
      "@routers/*": ["./src/routers/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@errors/*": ["./src/errors/*"],
      "@types/*": ["./src/types/*"],
      "@repositories": ["./src/repositories/*"],
      "@types": ["./src/types/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
